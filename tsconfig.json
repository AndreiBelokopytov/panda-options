{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "ES2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    },
    "sourceMap": true
  },
  "include": ["src"]
}
